@{
}
@using LMSEarlyBird.ViewModels
@model CreateAssignmentViewModel
<div class="container">
	<h1>@Model.Course.Department.DeptCode @Model.Course.CourseNumber @Model.Course.CourseName</h1>
	<h2>Edit Assignment:</h2>
</div>


<div class="row">
	<div class="col-md-8 offset-2">
		<form asp-action="EditAssignment" asp-route-assignmentId="@Model.AssignmentId" asp-route-courseId="@Model.Course.id">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>

			<div class="form-group">
				<label asp-for="Title" class="control-label"></label>
				<input asp-for="Title" class="form-control"/>
				<span asp-validation-for="Title" class="text-danger"></span>
			</div>

			<div class="form-group">
				<label asp-for="Description" class="control-label"></label>
				<textarea asp-for="Description" class="form-control"> </textarea>
				<span asp-validation-for="Description" class="text-danger"></span>
			</div>

			<div class="form-group">
				<label asp-for="Type" class="control-label"></label>
				<select asp-for="Type" class="form-control">
					<option value="file">File</option>
					<option value="text">Text</option>
				</select>
				<span asp-validation-for="Type" class="text-danger"></span>
			</div>

			<div class="form-group">
				<label asp-for="DueDate" class="control-label"></label>
				<input type="datetime-local" asp-for="DueDate" class="form-control" />
				<span asp-validation-for="DueDate" class="text-danger"></span>
			</div>

			<div class="form-group">
				<label asp-for="maxPoints" class="control-label"></label>
				<input type="number" min="0" asp-for="maxPoints" class="form-control" />
				<span asp-validation-for="maxPoints" class="text-danger"></span>
			</div>

			<div class="form-group">
				<input class="btn btn-outline-success float-right" type="submit" value="Edit Assignment"/>
				<a class="btn btn-outline-secondary" asp-controller="Instructor" asp-action="CourseAssignmentList" asp-route-courseId="@Model.Course.id">Cancel</a>
			</div>
		</form>
	</div>
</div>
