@using LMSEarlyBird.ViewModels
@model LoginViewModel

@{
    ViewData["Title"] = "Login";
}
<div class="text-center">
    <h1 class="display-3">Sign In</h2>
</div>

<div class="container d-flex justify-content-center">
    <form asp-action="Login" style="max-width: 300px; width: 80%;">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            @* <label asp-for="EmailAddress" class="form-label">Email</label> *@
            <input asp-for="EmailAddress" class="form-control" placeholder="Email">
            <span asp-validation-for="EmailAddress" class="text-danger"></span>
        </div>
        <div class="form-group">
            &nbsp;
            @* <label asp-for="Password" class="form-label"></label> *@
            <input asp-for="Password" class="form-control" placeholder="Password"/>
            <span asp-validation-for="Password" class="text-danger"></span>
            &nbsp;
        </div>

        @if (TempData["Error"] != null)
        {
            <div class="col-md-12 alert alert-danger">
                <span><b>Sorry!</b> - @TempData["Error"]</span>
            </div>
        }

        <div class="form-group">
            <div class="d-grid gap-2">
                <button type ="submit" class="btn btn-primary">Login</button>
                <a class="btn btn-primary"asp-controller="Account" asp-action="Register">Sign Up</a>
            </div>
        </div>
    </form>
</div>
